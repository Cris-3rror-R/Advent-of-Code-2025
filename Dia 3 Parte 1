//El arreglo Clave es para que aÃ±adas tus valores
public class Dia_3_1 {
    
public static int Buscar(int mayor, String lista){
    for (int i = 0; i < lista.length();i++){
        char c = lista.charAt(i);
        if (mayor == Character.getNumericValue(c)){
            return i;
        }
    }
    return -1;
}

public static void main(String[] args) {
    int Contrasena = 0;
    int mayor = 0;
    int aux = 0;
    String aux2 = "";
    String Clave[] = {};
    for (int x = 0; x < Clave.length;x++){
        String bateria = Clave[x];
        for (int y = 0; y < bateria.length()-1;y++){
            char b = bateria.charAt(y);
             if(mayor < Character.getNumericValue(b)){
                mayor = Character.getNumericValue(b);
        }
    }
      for (int y = Buscar(mayor,bateria)+1; y < bateria.length();y++){
            char c = bateria.charAt(y);
            if (aux < Character.getNumericValue(c)){
                aux = Character.getNumericValue(c); 
        }
    }
        aux2 = aux2+mayor+aux;
        Contrasena = Contrasena+Integer.parseInt(aux2);
        mayor =0;
        aux =0;
        aux2 ="";
    }
    System.out.println(Contrasena);
    }
}
